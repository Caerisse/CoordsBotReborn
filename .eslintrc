{
	"env": {
			"browser": true,
			"commonjs": true,
			"es2021": true
	},
	"extends": [
			"airbnb-base"
	],
	"parserOptions": {
			"ecmaVersion": 12
	},
	"rules": {
			"eqeqeq": "error",
			"linebreak-style": "off",
			"no-undef": "error",
			"max-len": ["error", { "code": 150 }],
			"prefer-destructuring": "off"
	},
	"ignorePatterns": [
			"node_modules",
			"*.jsx"
	]
}